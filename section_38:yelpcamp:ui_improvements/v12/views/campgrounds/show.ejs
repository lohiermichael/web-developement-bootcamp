<%- include('../partials/header') %>

<div class="container">
  <div class="rwo">
    <!-- Sidebar -->
    <div class="col-md-3">
      <p class="lead">Yelpcamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <!-- Campground content -->
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campground.image %> " alt="" />
        <div class="caption-full">
          <h4 class="pull-right">$<%= campground.price %>/night</h4>
          <h4><a><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
          <p>
            <em
              >Submitted by: <%= campground.author.username %>, <%=
              moment(campground.createdAt).fromNow() %></em
            >
          </p>
          <% if (currentUser && campground.author.id.equals(currentUser._id)) {
          %>
          <a
            href="/campgrounds/<%= campground.slug %>/edit "
            class="btn btn-xs btn-warning"
            >Edit</a
          >
          <form
            action="/campgrounds/<%= campground.slug %>?_method=DELETE"
            method="POST"
            class="deleteForm"
          >
            <button class="btn btn-xs btn-danger">Delete</button>
          </form>
          <% }; %>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a
            class="btn btn-success"
            href="/campgrounds/<%= campground.slug %>/comments/new "
            >Add a comment</a
          >
        </div>
        <hr />
        <% for (comment of campground.comments){ %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= comment.author.username %></strong>
            <span class="pull-right"
              ><%= moment(comment.createdAt).fromNow() %></span
            >
            <p><%= comment.text %></p>
            <% if (currentUser && comment.author.id.equals(currentUser._id)) {
            %>
            <a
              class="btn btn-xs btn-warning"
              href="/campgrounds/<%= campground.slug %>/comments/<%= comment._id %>/edit"
              >Edit</a
            >
            <form
              action="/campgrounds/<%= campground.slug %>/comments/<%= comment._id %>?_method=DELETE"
              method="POST"
              class="deleteForm"
            >
              <!-- We can make an input instead of a button -->
              <input
                type="submit"
                class="btn btn-xs btn-danger"
                value="Delete"
              />
            </form>
            <% }; %>
          </div>
        </div>
        <% }; %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
